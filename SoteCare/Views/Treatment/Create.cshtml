@model SoteCare.Models.Treatment

<h2>Create Treatment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Patient")
        @Html.DropDownList("PatientID", (SelectList)ViewBag.PatientID, "Select Patient", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Medication")
        @Html.DropDownList("MedicationID", (SelectList)ViewBag.MedicationID, "Select Medication", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Dosage")
        @Html.DropDownList("DosageID", (SelectList)ViewBag.DosageID, "Select Dosage", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TreatmentType)
        @Html.EditorFor(model => model.TreatmentType, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Create Treatment</button>
}

