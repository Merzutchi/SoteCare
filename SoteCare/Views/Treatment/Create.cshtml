@model SoteCare.Models.Treatment

@{
    ViewBag.Title = "Create Treatment";
}

<h2>Create Treatment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.PatientID)
        @Html.DropDownListFor(model => model.PatientID, (SelectList)ViewBag.Patients, "Select Patient", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PatientID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MedicationID)
        @Html.DropDownListFor(model => model.MedicationID, (SelectList)ViewBag.Medications, "Select Medication", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MedicationID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DosageID)
        @Html.DropDownListFor(model => model.DosageID, (SelectList)ViewBag.Dosages, "Select Dosage", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DosageID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TreatmentType)
        @Html.EditorFor(model => model.TreatmentType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TreatmentType)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StartDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EndDate)
    </div>

    <button type="submit" class="btn btn-primary">Create Treatment</button>
}

