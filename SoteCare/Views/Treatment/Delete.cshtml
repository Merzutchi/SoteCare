@model SoteCare.Models.Treatment

@{
    ViewBag.Title = "Delete Treatment";
}

<h2>Delete Treatment</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete the treatment record for <strong>@Model.Medication.MedicationName</strong> for patient <strong>@Model.Patients.FirstName @Model.Patients.LastName</strong>?
</div>

<div class="form-group">
    <dl class="dl-horizontal">
        <dt>Patient</dt>
        <dd>@Model.Patients.FirstName @Model.Patients.LastName</dd>

        <dt>Medication</dt>
        <dd>@Model.Medication.MedicationName</dd>

        <dt>Dosage</dt>
        <dd>@Model.Dosages.Dosage</dd>

        <dt>Treatment Type</dt>
        <dd>@Model.TreatmentType</dd>

        <dt>Start Date</dt>
        <dd>@Model.StartDate?.ToString("MM/dd/yyyy")</dd>

        <dt>End Date</dt>
        <dd>@Model.EndDate?.ToString("MM/dd/yyyy")</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Treatment", new { id = Model.TreatmentID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Delete Treatment</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}

