@model IEnumerable<SoteCare.Models.Treatment>

@{
    ViewBag.Title = "Treatment List";
}

<h2>Treatment List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Medication</th>
            <th>Dosage</th>
            <th>Treatment Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patients.FirstName</td>
                <td>@item.Medication.MedicationName</td>
                <td>@item.Dosages.Dosage</td>
                <td>@item.TreatmentType</td>
                <td>@item.StartDate?.ToString("MM/dd/yyyy")</td>
                <td>@item.EndDate?.ToString("MM/dd/yyyy")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentID })
                </td>
            </tr>
        }
    </tbody>
</table>

