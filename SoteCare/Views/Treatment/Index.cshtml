@model IEnumerable<SoteCare.Models.Treatment>

<h2>Treatment List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Treatment Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patients.FirstName @item.Patients.LastName</td>
                <td>@item.TreatmentType</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToShortDateString() : "Ongoing")</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.TreatmentID }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentID })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create", "Create")

