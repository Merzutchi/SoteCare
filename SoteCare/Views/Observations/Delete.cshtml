@model SoteCare.Models.Observations

@{
    ViewBag.Title = "Delete Observation";
}

<h2>Are you sure you want to delete this observation?</h2>

<p><strong>Observation Text:</strong> @Model.ObservationText</p>

@using (Html.BeginForm("Delete", "Observations", new { id = Model.ObservationID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Observations")" class="btn btn-secondary">Cancel</a>
}
