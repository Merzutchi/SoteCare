@model IEnumerable<SoteCare.Models.TreatmentDetails>

@{
    ViewBag.Title = "Treatment Details";
}

<h2 class="text-center">Treatment Details</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Treatment</th>
            <th>Medication</th>
            <th>Dosage</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Treatment?.TreatmentType ?? "No Treatment")</td>
                <td>@(item.Medications?.MedicationName ?? "No Medication")</td>
                @*<td>@(item.Dosages?.Dosage ?? "No Dosage")</td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentDetailID }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentDetailID }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this item?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    @Html.ActionLink("Create New Treatment Detail", "Create", null, new { @class = "btn btn-primary" })
</div>

