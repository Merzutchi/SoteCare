@model SoteCare.Models.TreatmentDetails

@{
    ViewBag.Title = "Create Treatment Detail";
}

<h2 class="text-center">Create Treatment Detail</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.TreatmentID, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.TreatmentID, (SelectList)ViewBag.TreatmentID, "Select Treatment", new { @class = "form-select" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.MedicationID, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.MedicationID, (SelectList)ViewBag.MedicationID, "Select Medication", new { @class = "form-select" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.DosageID, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.DosageID, (SelectList)ViewBag.DosageID, "Select Dosage", new { @class = "form-select" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="@Url.Action("Index", "TreatmentDetails")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>


