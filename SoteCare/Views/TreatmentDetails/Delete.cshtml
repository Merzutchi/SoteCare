@model SoteCare.Models.TreatmentDetails

@{
    ViewBag.Title = "Delete Treatment Detail";
}

<h2 class="text-center text-danger">Delete Treatment Detail</h2>

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-body">
            <div class="alert alert-warning text-center">
                <strong>Warning:</strong> Are you sure you want to delete the treatment detail for
                <strong>@(Model.Treatment?.TreatmentType ?? "Unknown Treatment")</strong>?
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center">
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
