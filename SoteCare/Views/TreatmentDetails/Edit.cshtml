@model SoteCare.Models.TreatmentDetails

@{
    ViewBag.Title = "Edit Treatment Detail";
}

<h2 class="text-center">Edit Treatment Detail</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.TreatmentID, new { @class = "form-label" })
                    @Html.DropDownListFor(
                        model => model.TreatmentID,
                        new SelectList(ViewBag.TreatmentID, "Value", "Text", Model.TreatmentID),
                        "Select Treatment",
                        new { @class = "form-select" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MedicationID, new { @class = "form-label" })
                    @Html.DropDownListFor(
                        model => model.MedicationID,
                        new SelectList(ViewBag.MedicationID, "Value", "Text", Model.MedicationID),
                        "Select Medication",
                        new { @class = "form-select" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DosageID, new { @class = "form-label" })
                    @Html.DropDownListFor(
                        model => model.DosageID,
                        new SelectList(ViewBag.DosageID, "Value", "Text", Model.DosageID),
                        "Select Dosage",
                        new { @class = "form-select" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("Index", "TreatmentDetails")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
