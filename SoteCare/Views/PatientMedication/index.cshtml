@model IEnumerable<SoteCare.Models.PatientMedication>

@{
    ViewBag.Title = "Medications";
}

<h2>Medications for Patient: @ViewBag.PatientID</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Medication</th>
            <th>Dosage</th>
            <th>Frequency</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var medication in Model)
            {
                <tr>
                    <td>@medication.Medication?.MedicationName</td>
                    <td>@medication.Dosage?.Dosage</td>
                    <td>@medication.Dosage?.Frequency</td>
                    <td>@medication.Dosage?.StartDate?.ToString("dd-MM-yyyy")</td>
                    <td>@medication.Dosage?.EndDate?.ToString("dd-MM-yyyy")</td>
                    <td>
                        <a href="@Url.Action("Edit", "PatientMedication", new { patientId = medication.PatientID, medicationId = medication.MedicationID })">Edit</a> |
                        <a href="@Url.Action("Delete", "PatientMedication", new { patientId = medication.PatientID, medicationId = medication.MedicationID })" onclick="return confirm('Are you sure you want to delete this medication?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No medications found for this patient.</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create", "PatientMedication", new { patientId = ViewBag.PatientID })" class="btn btn-primary">Add Medication</a>
</p>

