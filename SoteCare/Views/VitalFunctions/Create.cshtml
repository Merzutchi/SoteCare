@model SoteCare.Models.VitalFunctions

@{
    ViewBag.Title = "Add Vital Function";
}

<h2>Add Vital Function for @ViewBag.PatientName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vital Function Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.PatientID)
        <div class="form-group">
            <label class="control-label col-md-2">Patient</label>
            <div class="col-md-10">
                <p class="form-control-static">@ViewBag.PatientName</p>
            </div>
        </div>

        <div class="form-group">
            <label>Date/Time</label>
            <input type="datetime-local" name="DateTime" class="form-control"
                   value="@Model.DateTime?.ToString(" yyyy-MM-ddTHH:mm")" required />
        </div>

        <div class="form-group">
            <label>Heart Rate</label>
            <input type="number" name="HeartRate" class="form-control"
                   value="@Model.HeartRate" />
        </div>

        <div class="form-group">
            <label>Systolic BP</label>
            <input type="number" name="SystolicBloodPressure" class="form-control"
                   value="@Model.SystolicBloodPressure" />
        </div>

        <div class="form-group">
            <label>Diastolic BP</label>
            <input type="number" name="DiastolicBloodPressure" class="form-control"
                   value="@Model.DiastolicBloodPressure" />
        </div>

        <div class="form-group">
            <label>Respiratory Rate</label>
            <input type="number" name="RespiratoryRate" class="form-control"
                   value="@Model.RespiratoryRate" />
        </div>

        <div class="form-group">
            <label>Temperature</label>
            <input type="number" step="0.1" name="Temperature" class="form-control"
                   value="@Model.Temperature" />
        </div>

        <div class="form-group">
            <label>Oxygen Saturation</label>
            <input type="number" step="0.1" name="OxygenSaturation" class="form-control"
                   value="@Model.OxygenSaturation" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("VitalFunctions", "Patients", new { id = Model.PatientID })" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
}