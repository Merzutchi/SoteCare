@model SoteCare.Models.MedicationList

<h2>Edit Medication List</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.MedicationListID)

    <div class="form-group">
        @Html.LabelFor(model => model.MedicationName)
        @Html.EditorFor(model => model.MedicationName)
        @Html.ValidationMessageFor(model => model.MedicationName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MedicationType)
        @Html.EditorFor(model => model.MedicationType)
        @Html.ValidationMessageFor(model => model.MedicationType)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}


