@model SoteCare.Models.PatientMedications

<h2>Add Medication to Patient</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.PatientID)
        @Html.DropDownListFor(model => model.PatientID, (SelectList)ViewBag.PatientID, "Select Patient", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MedicationID)
        @Html.DropDownListFor(model => model.MedicationID, (SelectList)ViewBag.MedicationID, "Select Medication", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MedicationListID)
        @Html.DropDownListFor(model => model.MedicationListID, (SelectList)ViewBag.MedicationListID, "Select Medication List", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DoseStrength)
        @Html.EditorFor(model => model.DoseStrength, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Add Medication</button>
}

