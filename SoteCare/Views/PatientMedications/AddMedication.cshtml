@model SoteCare.Models.PatientMedications

@using (Html.BeginForm("AddMedication", "PatientMedications", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PatientID)

    <div class="form-group">
        <label for="MedicationID">Medication</label>
        @Html.DropDownListFor(model => model.MedicationID, (SelectList)ViewBag.MedicationID, "Select Medication", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="DosageID">Dosage</label>
        @Html.DropDownListFor(model => model.DosageID, (SelectList)ViewBag.DosageID, "Select Dosage", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="StartDate">Start Date</label>
        @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        <label for="EndDate">End Date</label>
        @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <button type="submit" class="btn btn-success">Add Medication</button>
}