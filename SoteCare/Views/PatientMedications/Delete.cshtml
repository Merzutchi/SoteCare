@model SoteCare.Models.PatientMedications

@{
    ViewBag.Title = "Delete Medication";
}

<h2>Delete Medication</h2>

<h3>Are you sure you want to delete this medication?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Medication Name</dt>
        <dd>@Model.Medications?.MedicationName ?? "N/A"</dd>

        <dt>Start Date</dt>
        <dd>@Model.StartDate?.ToString("yyyy-MM-dd") ?? "N/A"</dd>

        <dt>End Date</dt>
        <dd>@Model.EndDate?.ToString("yyyy-MM-dd") ?? "N/A"</dd>

        <dt>Patient Name</dt>
        <dd>@Model.Patients?.FirstName ?? "Unknown"</dd>
    </dl>

    @using (Html.BeginForm("Delete", "PatientMedications", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.PatientMedicationID)

        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "PatientMedications", "Patients", new { id = Model.PatientID }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

