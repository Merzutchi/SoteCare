<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/site.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="sidenav">
        @Html.ActionLink("SoteCare", "Index", "Home")
        <hr />
        <input type="text" id="sideSearch" onkeyup="myFunction()" placeholder="Haku.." title="Hae tietoja">
        <hr />
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("About", "About", "Home")
        @Html.ActionLink("Contact", "Contact", "Home")
        @Html.ActionLink("Patients", "Index", "Patients")
        @Html.ActionLink("Patients 2", "Index2", "Patients")
        @Html.ActionLink("Medications", "Index", "Medications")
        @Html.ActionLink("Patient History", "Index", "PatientHistory")
        @Html.ActionLink("VitalFunctions kirjaus", "Index", "VitalFunctions")
        @Html.ActionLink("Diagnoosit kirjaus", "Index", "Diagnoses")
        @Html.ActionLink("Users", "Index", "Users")
        @Html.ActionLink("Nurses", "Index", "Nurses")
        @Html.ActionLink("Medication Lists", "Index", "MedicationList")
        @Html.ActionLink("PatientMedication", "Index", "PatientMedications")
        @Html.ActionLink("Doctors", "Index", "Doctors")

        <div class="content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SoteCare</p>
            </footer>
        </div>
    </div>
</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

