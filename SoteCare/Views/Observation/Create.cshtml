@model SoteCare.Models.Observations

@{
    ViewBag.Title = "Create Observation";
}

<h2>Lisää huomio</h2>

@using (Html.BeginForm("Create", "Observation", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Dropdown for Nurses -->
        <div class="form-group">
            <label for="AssignedTo">Määritä</label>
            <select name="AssignedTo" id="AssignedTo" class="form-control" required>
                <option value="">-- Valitse hoitaja --</option>
                @foreach (var nurse in (List<SoteCare.ViewModels.NurseDropdownViewModel>)ViewBag.Nurses)
                {
                    <option value="@nurse.UserID">@nurse.FullName</option>
                }
            </select>
        </div>

        <!-- Observation Text -->
        <div class="form-group">
            <label for="ObservationText">Huomautusteksti</label>
            <textarea name="ObservationText" id="ObservationText" class="form-control" rows="4" placeholder="Kirjoita huomautuksesi tähän..." required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lisää</button>
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Cancel</a>
    </div>
}