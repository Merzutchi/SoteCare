@{
    ViewBag.Title = "Dashboard";
}

<!-- Top Section -->
<div class="row mb-4">
    <div class="col-md-8">
        <!-- logged-in user's full name -->
        <h1>Welcome, <a href="@Url.Action("UserProfile", "Account")">@Session["FullName"]</a></h1>
        <p>Your healthcare dashboard</p>
    </div>
    <div class="col-md-4 text-right">
        <!-- User Info -->
        <div class="card bg-light p-3">
            <h5>User</h5>
            <p>
                <a href="@Url.Action("UserProfile", "Account")">@Session["FullName"]</a> <!-- name as clickable link -->
            </p>
            <form action="@Url.Action("Logout", "Account")" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</div>

<!-- Patient Statistics -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-center bg-light p-3">
            <h4>Total Patients</h4>
            <p class="h2">@ViewBag.TotalPatients</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center bg-light p-3">
            <h4>New Patients</h4>
            <p class="h2">@ViewBag.NewPatients</p>
        </div>
    </div>
</div>

<!-- Main Section -->
<div class="row">
    <!-- Left Column (Recent Patients and Cards) -->
    <div class="col-md-8">
        <!-- Recent Patients Table -->
        <h2 class="section-title">Recent Patients</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Potilaan Nimi</th>
                    <th>Syntymäaika</th>
                    <th>Sukupuoli</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in ViewBag.RecentPatients)
                {
                    <tr>
                        <td>@patient.PatientID</td>
                        <td>@patient.FirstName @patient.LastName</td>
                        <td>@patient.DateOfBirth.ToShortDateString()</td>
                        <td>@patient.Gender</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Medication Info, Treatment Cards -->
        <div class="row">
            <div class="col-md-6">
                <div class="card bg-info text-white p-3 mb-3">
                    <h4>Medication Info</h4>
                    <p>Number of Medications: @ViewBag.TotalMedications</p>
                    <p>Active Medications: @ViewBag.ActiveMedications</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-success text-white p-3 mb-3">
                    <h4>Treatment Info</h4>
                    <p>Active Treatments: @ViewBag.ActiveTreatments</p>
                    <p>Completed Treatments: @ViewBag.CompletedTreatments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column (Observations and Doctor List) -->
    <div class="col-md-4">
        <!-- Observations Section -->
        <h2 class="section-title">Huomiot</h2>
        <div class="card bg-light p-3 mb-4">
            @if (ViewBag.Observations != null && ViewBag.Observations.Count > 0)
            {
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>Created By</th>
                            <th>Observation</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var observation in ViewBag.Observations)
                        {
                            <tr>
                                <td>@(observation.Users != null ? observation.Users.FirstName + " " + observation.Users.LastName : "Unknown User")</td>
                                <td>@observation.ObservationText</td>
                                <td>@observation.CreatedDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Ei käytössä.</p>
            }
        </div>

        <!-- Doctors List Section -->
        <h2 class="section-title">Doctor List</h2>
        <div class="card bg-light p-3">
            <ul class="list-unstyled">
                @foreach (var doctor in ViewBag.Doctors)
                {
                    <li class="mb-2">
                        <strong>@doctor.FirstName @doctor.LastName</strong>
                        <br />
                        Specialization: @doctor.Specialization
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}



