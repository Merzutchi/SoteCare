@model IEnumerable<SoteCare.Models.Medications>
@{
    ViewBag.Title = "Lääkehallinta";
}

<h2>Lääkehallinta</h2>

@if (TempData["message"] != null)
 {
    <div class="alert alert-success" role="alert">@TempData["message"]</div>
 }
@if (TempData["error"] != null)
 {
    <div class="alert alert-danger" role="alert">@TempData["error"]</div>
 }

<a href="@Url.Action("AddMedication", "Medications")" class="btn btn-primary mb-3">Add Medication</a>

<table class="table table-striped table-bordered medication-table">
    <thead>
        <tr>
            <th>Nimi </th>
            <th>Annostus (mg) </th>
            <th>Antotiheys </th>
            <th>Ohjeet </th>
            <th>Toiminnot </th>            
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Ei näytettäviä lääkkeitä.</td>
            </tr>
        }
        else
        {
            foreach (var medication in Model)
            {
                <tr>
                    <td>@medication.MedicationName</td>
                    <td>@medication.Dosage</td>
                    <td>@medication.Frequency</td>
                    <td>@medication.Instructions</td>
                    <td>
                        <a href="@Url.Action("MedicationDetails", "Medications", new { id = medication.MedicationID })">View Details</a>
                        <a href="@Url.Action("UpdateMedication", "Medications", new { MedicationID = medication.MedicationID })" class="btn btn-warning">Muokkaa</a>
                        <a href="@Url.Action("DeleteMedication", "Medications", new { id = medication.MedicationID})" class="btn btn-danger" onclick="return confirm('Olet poistamassa tämän lääkkeen. Oletko varma?');">Poista</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
















