@model SoteCare.Models.Medications

@{
    ViewBag.Title = "Create Medication";
}

<h2>Create Medication</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.MedicationName)
        @Html.TextBoxFor(m => m.MedicationName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MedicationType)
        @Html.TextBoxFor(m => m.MedicationType, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
