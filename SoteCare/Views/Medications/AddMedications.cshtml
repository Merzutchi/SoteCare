@model SoteCare.Models.Medications

<h2>Lisää Lääke</h2>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.MedicationName)
        @Html.TextBoxFor(m => m.MedicationName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MedicationName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Dosage)
        @Html.TextBoxFor(m => m.Dosage, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Dosage)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Frequency)
        @Html.TextBoxFor(m => m.Frequency, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Frequency)
    </div>

    <!-- Dropdown for selecting a patient -->
    <div class="form-group">
        @Html.LabelFor(m => m.PatientID)
        @Html.DropDownListFor(m => m.PatientID, new SelectList(ViewBag.Patients, "PatientID", "FullName"), "Select Patient", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PatientID)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RouteOfAdministration)
        @Html.TextBoxFor(m => m.RouteOfAdministration, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RouteOfAdministration)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Instructions)
        @Html.TextAreaFor(m => m.Instructions, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Instructions)
    </div>

    <button type="submit" class="btn btn-primary">Lisää</button>
 }