@model SoteCare.Models.Medications

@{
    ViewBag.Title = "Confirm Deletion";
}

<h3>Are you sure you want to delete this medication?</h3>

<div>
    <p><strong>Medication:</strong> @Model.MedicationName</p>
    <p><strong>Patient:</strong> @Model.Patients.FirstName @Model.Patients.LastName</p>
    <p><strong>Dosage:</strong> @Model.Dosages.FirstOrDefault()?.DosageAmount</p>
    <p><strong>Start Date:</strong> @Model.Treatment?.StartDate?.ToString("d")</p>
    <p><strong>End Date:</strong> @Model.Treatment?.EndDate?.ToString("d")</p>
    <p><strong>Refill Status:</strong> @Model.RefillStatus</p>
</div>

<div>
    <form action="@Url.Action("ConfirmDeleteMedication", "Medications", new { id = Model.MedicationID })" method="post">
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("MedicationsView", "Medications")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
