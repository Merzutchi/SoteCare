@model IEnumerable<SoteCare.Models.Diagnosis>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.DiagnosisName)</th>
        <th>@Html.DisplayNameFor(model => model.DiagnosisDate)</th>
        <th>@Html.DisplayNameFor(model => model.Notes)</th>
        <th>@Html.DisplayNameFor(model => model.Patient.FirstName)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.DiagnosisName)</td>
        <td>@item.DiagnosisDate.ToString("dd/MM/yyyy/")</td>
        <td>@Html.DisplayFor(modelItem => item.Notes)</td>
        <td>@Html.DisplayFor(modelItem => item.Patient.FirstName)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DiagnosisID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DiagnosisID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DiagnosisID })
        </td>
    </tr>
}

</table>
