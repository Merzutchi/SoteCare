@model IEnumerable<SoteCare.Models.Dosages>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Dosage)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Frequency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RouteOfAdministration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DosageAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medications.MedicationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patients.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Dosage)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteOfAdministration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DosageAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medications.MedicationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patients.FirstName) @Html.DisplayFor(modelItem => item.Patients.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DosageID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DosageID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DosageID })
            </td>
        </tr>
    }

</table>
