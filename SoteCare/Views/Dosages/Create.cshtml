@model SoteCare.Models.Dosages

@{
    ViewBag.Title = "Create Dosage";
}

<h2>Create Dosage</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dosages</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Medication DropDown -->
        <div class="form-group">
            @Html.LabelFor(model => model.MedicationID, "Medication", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MedicationID, (SelectList)ViewBag.MedicationID, "Select Medication", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MedicationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Dosage Amount -->
        <div class="form-group">
            @Html.LabelFor(model => model.DosageAmount, "Dosage Amount", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DosageAmount, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DosageAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Frequency, Start Date, etc. -->
        <div class="form-group">
            @Html.LabelFor(model => model.Frequency, "Frequency", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Frequency, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Frequency, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- PatientID DropDown -->
        <div class="form-group">
            @Html.LabelFor(model => model.PatientID, "Patient", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PatientID, (SelectList)ViewBag.PatientID, "Select Patient", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PatientID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
