@model IEnumerable<SoteCare.Models.Treatment>

<h2>All Treatments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Treatment Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Medication</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patients.FirstName @item.Patients.LastName</td>
                <td>@item.TreatmentType</td>
                <td>@item.StartDate.ToString("d")</td>
                <td>@(item.EndDate?.ToString("d") ?? "Jatkuva")</td>
                <td>@item.Medications?.MedicationName ?? "N/A"</td>
                <td>@item.Notes</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentID, patientId = item.PatientID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentID, patientId = item.PatientID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>



