@model SoteCare.Models.Treatment

@{
    ViewBag.Title = "Delete Treatment";
}

<h2>Poista hoito</h2>

<h3>Oletko varma että haluat poistaa tämän hoidon?</h3>

<div>
    <p><strong>Potilas:</strong> @Model.Patients.FirstName @Model.Patients.LastName</p>
    <p><strong>Hoito tyyli:</strong> @Model.TreatmentType</p>
    <p><strong>Aloitus päivämäärä:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>Lopetus päivämäärä:</strong> @(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "Ongoing")</p>
    <p><strong>Muistiinpanot:</strong> @Model.Notes</p>
</div>

@using (Html.BeginForm("Delete", "Treatments", new { id = Model.TreatmentID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Poista</button>
    <a href="@Url.Action("Treatments", "Patients", new { id = Model.PatientID })" class="btn btn-secondary">Takaisin</a>
}




