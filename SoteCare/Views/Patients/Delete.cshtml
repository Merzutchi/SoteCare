@model SoteCare.Models.Patients

@{
    ViewBag.Title = "Delete Patient";
}

<div class="container">
    <h2>Poista potilas</h2>

    <div class="alert alert-warning">
        <p>Oletko varma, että haluat poistaa potilaan?</p>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>Koko nimi</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <td>@Model.DateOfBirth.ToString("dd-MM-yyyy")</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <td>@Model.PhoneNumber</td>
        </tr>
    </table>

