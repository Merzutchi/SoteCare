@model IEnumerable<SoteCare.Models.Diagnoses>

<h2>Potilaan diagnoosit</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DiagnosisDate)</th>
                <th>@Html.DisplayNameFor(model => model.DiagnosisName)</th>
                <th>@Html.DisplayNameFor(model => model.DoctorName)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.DiagnosisDate?.ToString("d") ?? "Date not available")</td> <!-- Default message if no date -->
                    <td>@item.DiagnosisName</td> <!-- Show diagnosis name -->
                    <td>@item.DoctorName</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Button to create new diagnosis -->
<div class="mt-3">
    @Html.ActionLink("Lisää diagnoosi", "Create", "Diagnoses", new { patientID = ViewBag.PatientID }, new { @class = "btn btn-success" })
</div>

<div>
    @Html.ActionLink("Takaisin", "Details", "Patients", new { id = ViewBag.PatientID }, new { @class = "btn btn-primary" })
</div>

