@model IEnumerable<SoteCare.Models.Diagnoses>

<h2>@ViewBag.PatientName's Diagnoses</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DiagnosisDate)</th>
                <th>@Html.DisplayNameFor(model => model.DiagnosisName)</th>
                <th>@Html.DisplayNameFor(model => model.DoctorName)</th>  <!-- Corrected to DoctorName -->
                <th>Muutokset</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.DiagnosisDate?.ToString("d") ?? "Date not available")</td> <!-- Default message if no date -->
                    <td>@item.DiagnosisName</td>
                    <td>@(item.Doctors != null ? item.Doctors.FullName : "Doctor not assigned")</td> <!-- Handling null check for doctor -->
                    <td>@Html.ActionLink("Poista", "Delete", "Diagnoses", new { id = item.DiagnosisID }, new { @class = "btn btn-danger btn-sm" })</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Button to create new diagnosis -->
<div class="mt-3">
    @Html.ActionLink("Lisää uusi", "Create", "Diagnoses", new { patientID = ViewBag.PatientID }, new { @class = "btn btn-success" })
    @Html.ActionLink("Takaisin", "Details", "Patients", new { id = ViewBag.PatientID }, new { @class = "btn btn-secondary" })
</div>

