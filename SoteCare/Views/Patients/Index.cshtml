<div class="container">
    <h2>Patients</h2>
    <a href="@Url.Action("Create", "Patients")" class="btn btn-primary mb-3">Add New Patient</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.FirstName @patient.LastName</td>
                    <td>@patient.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td>@patient.Gender</td>
                    <td>
                        <a href="@Url.Action("Details", "Patients", new { id = patient.PatientID })" class="btn btn-info">Details</a>
                        <a href="@Url.Action("Edit", "Patients", new { id = patient.PatientID })" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


