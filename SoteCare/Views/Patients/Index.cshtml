@model IEnumerable<SoteCare.Models.Patients>

@{
    ViewBag.Title = "Patients";
}

<h2 class="text-center">Potilaat</h2>

<div class="container">
    <!-- Add New Patient Button -->
    <div class="mb-3 text-end">
        @Html.ActionLink("Uusi potilas", "Create", "Patients", null, new { @class = "btn btn-primary" })
    </div>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Details", "Patients", new { id = item.PatientID })">
                    @item.FirstName @item.LastName
                </a>
            </li>
        }
    </ul>
</div>

