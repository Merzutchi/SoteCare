@model IEnumerable<SoteCare.Models.PatientMedications>

<div class="container">
    <h2>Potilaan lääkitys, @ViewBag.PatientName</h2>

    @if (!Model.Any())
    {
        <p class="alert alert-info">
            Lääkitystä ei löytynyt potilaalle, @ViewBag.PatientName (ID: @ViewBag.PatientID).
            Lisää lääkitys alapuolelta.
        </p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lääkkeen nimi</th>
                    <th>Annos</th>
                    <th>Alkupäivä</th>
                    <th>Loppupäivä</th>
                    <th>Lääkäri</th>
                    <th>Annostelureitti</th>
                    <th>Muutokset</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Lääkkeen nimi -->
                        <td>@(item.Medications?.MedicationName ?? "Tuntematon lääke")</td>
                        <!-- Annos -->
                        <td>@(item.Dosages?.DosageAmount ?? "Annosta ei saatavilla")</td>
                        <!-- Alkupäivä -->
                        <td>@(item.StartDate?.ToString("yyyy-MM-dd") ?? "Ei määritelty")</td>
                        <!-- Loppupäivä -->
                        <td>@(item.EndDate?.ToString("yyyy-MM-dd") ?? "Ei määritelty")</td>
                        <!-- Lääkäri -->
                        <td>
                            @if (item.Doctors != null)
                            {
                                @($"{item.Doctors.FirstName} {item.Doctors.LastName}")
                            }
                            else
                            {
                                @("Lääkäriä ei määritelty")
                            }
                        </td>
                        <!-- Annostelureitti -->
                        <td>@(item.Dosages?.RouteOfAdministration ?? "Tietoa ei saatavilla")</td>
                        <!-- Toiminnot -->
                        <td>
                            @Html.ActionLink("Poista", "Delete", "PatientMedications",
                                new { id = item.PatientMedicationID },
                                new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        @Html.ActionLink("Lisää uusi", "AddMedication", "PatientMedications",
            new { id = ViewBag.PatientID },
            new { @class = "btn btn-success" })

        @Html.ActionLink("Takaisin", "Details", "Patients",
            new { id = ViewBag.PatientID },
            new { @class = "btn btn-secondary" })
    </div>
</div>