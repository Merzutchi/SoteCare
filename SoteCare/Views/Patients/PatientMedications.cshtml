@model IEnumerable<SoteCare.Models.PatientMedications>

<div class="container">
    <h2>Medications for @ViewBag.PatientName</h2>

    @if (!Model.Any())
    {
        <p class="alert alert-info">No medications found for this patient. Use the button below to add a medication.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Medication Name</th>
                    <th>Dosage</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Prescribing Doctor</th>
                    <th>Route of Administration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Medications?.MedicationName ?? "Unknown Medication")</td>
                        <td>
                            @if (item.Dosages != null)
                            {
                                <p>@item.Dosages.DosageAmount</p>
                                <p>@item.Dosages.RouteOfAdministration</p>
                            }
                            else
                            {
                                <p>No Dosage Available</p>
                            }
                        </td>
                        <td>@(item.StartDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>@(item.EndDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>@($"{item.Doctors?.FirstName ?? "Unknown"} {item.Doctors?.LastName}")</td>
                        <td>@(item.Dosages?.RouteOfAdministration ?? "N/A")</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "PatientMedications", new { id = item.PatientMedicationID }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Delete", "Delete", "PatientMedications", new { id = item.PatientMedicationID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        @Html.ActionLink("Add Medication", "AddMedication", "PatientMedications", new { id = ViewBag.PatientID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to Patient Details", "Details", "Patients", new { id = ViewBag.PatientID }, new { @class = "btn btn-secondary" })
    </div>
</div>
