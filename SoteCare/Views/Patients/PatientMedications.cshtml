@model IEnumerable<SoteCare.Models.PatientMedications>

<div class="container">
    <h2>Potilaan lääkitys, @ViewBag.PatientName</h2>

    <!-- If no medications exist for this patient -->
    @if (!Model.Any())
    {
        <p class="alert alert-info">
            Lääkitystä ei löytynyt potilaalle, @ViewBag.PatientName (ID: @ViewBag.PatientID).
            Lisää lääkitys alapuolelta.
        </p>
    }
    else
    {
        <!-- Table to display medications -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lääkkeen nimi</th>
                    <th>@Html.DisplayNameFor(model => model.DoseStrength)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th>Lääkäri</th>  <!-- Prescribing Doctor -->
                    <th>Annostelureitti</th> <!-- Route of Administration -->
                    <th>Muutokset</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Medication Name -->
                        <td>@(item.Medications?.MedicationName ?? "Unknown Medication")</td>

                        <!-- Dosage -->
                        <td>
                            @if (item.Dosages != null)
                            {
                                <p>@item.Dosages.DosageAmount</p>
                            }
                            else
                            {
                                <p>No Dosage Available</p>
                            }
                        </td>

                        <!-- Start Date -->
                        <td>@(item.StartDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                        <!-- End Date -->
                        <td>@(item.EndDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                        <!-- Prescribing Doctor -->
                        <td>@(item.Doctors != null ? $"{item.Doctors.FirstName} {item.Doctors.LastName}" : "Unknown Doctor")</td>


                        <!-- Route of Administration -->
                        <td>@(item.RouteOfAdministration ?? "N/A")</td>

                        <!-- Actions -->
                        <td>

                            @Html.ActionLink("Poista", "Delete", "PatientMedications",
                                new { id = item.PatientMedicationID },
                                new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- Buttons for Adding Medication and Returning to Patient Details -->
    <div class="mt-3">
        @Html.ActionLink("Lisää uusi", "AddMedication", "PatientMedications",
            new { id = ViewBag.PatientID },
            new { @class = "btn btn-success" })

        @Html.ActionLink("Takaisin", "Details", "Patients",
            new { id = ViewBag.PatientID },
            new { @class = "btn btn-secondary" })
    </div>
</div>